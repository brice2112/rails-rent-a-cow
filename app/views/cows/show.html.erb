<div class="card">
  <div class="row justify-content-center">
      <h1 class="centered"><%= @cow.name%></h1>
        <% if @cow.photo.attached? %>
          <%= cl_image_tag(@cow.photo.key, width: 800, height: 600, crop: :fill) %>
        <p class="centered"><strong>Owner</strong>: <%= @cow.user.first_name %> <%= @cow.user.last_name %></p>
        <% end %>
        <p class="centered"><strong>Race</strong></p>
        <p class="centered"><%= @cow.race %></p>
        <p class="centered"><strong>Gender</strong></p>
        <p class="centered"><%= @cow.gender %></p>
        <p class="centered"><strong>Age</strong></p>
        <p class="centered"><%= @cow.age %></p>
        <p><%= @cow.description %></p>



  </div>
</div>
        <% if @cow.user != current_user %>
          <%= simple_form_for @booking,url: cow_bookings_path(@cow.id), method: :post, remote: false do |f| %>
            <%= f.input :date, as: :date %>
            <%= f.button :submit %>
          <% end %>
        <% end %>

        <% if @cow.user == current_user && @reservations != []%>
          <% @reservations.each do |resa| %>
            <ul>
              <li>
                <%= resa.date %>
              </li>
            </ul>
          <% end %>
        <% end %>
