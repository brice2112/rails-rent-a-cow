<h1>All the Cows</h1>

<div class="flex-container">
  <% @cows.each do |cow| %>
    <div class="flex-item">
    <div class="card-cows">
        <div class="card-cow-infos">
          <% if cow.photo.attached? %>
            <%= cl_image_tag(cow.photo.key, width: 100, height: 100, crop: :fill) %>
          <% end %>
          <h2><%= link_to "#{cow.name}", cow_path(cow.id) %></h2>
          <p><%= link_to "#{cow.gender}", cow_path(cow.id) %></p>
          <p><%= link_to "#{cow.age}", cow_path(cow.id) %></p>
            <%= link_to "Remove", cow_path(cow.id),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>
    </div>
  </div>
  <% end %>
</div>
