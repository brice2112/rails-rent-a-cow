<h1>My Profile</h1>

<h2>My Infos</h2>
<p><%= @user.first_name %></p>
<p><%= @user.last_name %></p>
<p><%= @user.phone_number %></p>
<p><%= @user.address %></p>

<div class="container-fluid">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><%= link_to "My cows", request.params.merge(tab: "my_cows") %></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><%= link_to "My bookings", request.params.merge(tab: "my_bookings") %></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false"><%= link_to "My booking requests", request.params.merge(tab: "my_booking_requests") %></button>
    </li>
  </ul>

  <% if params[:tab].present? %>
    <%= render "shared/#{params[:tab]}" %>
  <% end %>
</div>
