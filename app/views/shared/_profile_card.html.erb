<div class="profile-card" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(255,255,255,0.2))">
  <div class="">
    <h1 class="header">My Profile </h1>
  </div>
  <div class="d-flex">
    <%= image_tag('photo_banner.jpg', class:'avatar-large') %>
    <div class="container-fluid profile">
      <div class="d-flex mx-1">
        <p class="card-name"><%= @user.first_name %></p>
        <p class="card-name"><%= @user.last_name %></p>
      </div>
        <p class="card-info"><%= @user.phone_number %></p>
        <p class="card-info"><%= @user.address %></p>
      </div>
    </div>
  </div>
</div>
